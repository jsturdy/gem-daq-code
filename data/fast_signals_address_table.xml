<?xml version="1.0" encoding="ISO-8859-1"?>
<node id="top">
  <node id="Send"  address="0x40030140"
	description="send fast command">
    <node id="LV1A"         address="0x0"  mask="0xFFFFFFFF"  permission="w"
	  description="send LV1A command to system" />
    <node id="CalPulse"     address="0x1"  mask="0xFFFFFFFF"  permission="w"
	  description="send CalPulse command to system" />
    <node id="Resync"       address="0x2"  mask="0xFFFFFFFF"  permission="w"
	  description="send Resync command to system" />
    <node id="BC0"          address="0x3"  mask="0xFFFFFFFF"  permission="w"
	  description="send BC0 command to system" />
    <node id="L1ACalPulse"  address="0x4"  mask="0xFFFFFFFF"  permission="w"
	  description="send L1A and CalPulse separated by <valu> VFAT2 clock cycles" />
  </node> <!-- end send commands -->

  <node id="Requests"  address="0x40030144"
	description="fast command counters">
    <node id="LV1A"      address="0x0"  mask="0xFFFFFFFF"  permission="r"
	  description="number of LV1As sent to system" />
    <node id="CalPulse"  address="0x1"  mask="0xFFFFFFFF"  permission="r"
	  description="number of CalPulses sent to system" />
    <node id="Resync"    address="0x2"  mask="0xFFFFFFFF"  permission="r"
	  description="number of Resyncs sent to system" />
    <node id="BC0"       address="0x3"  mask="0xFFFFFFFF"  permission="r"
	  description="number of BC0s sent to system" />
  </node> <!-- end counter -->

  <node id="Reset"  address="0x40030148"
	description="reset fast command counters">
    <node id="LV1A"      address="0x0"  mask="0xFFFFFFFF"  permission="w"
	  description="reset LV1A counters" />
    <node id="CalPulse"  address="0x1"  mask="0xFFFFFFFF"  permission="w"
	  description="reset CalPulse counters" />
    <node id="Resync"    address="0x2"  mask="0xFFFFFFFF"  permission="w"
	  description="reset Resync counters" />
    <node id="BC0"       address="0x3"  mask="0xFFFFFFFF"  permission="w"
	  description="reset BC0 counters" />
  </node> <!-- end counter resets -->

</node> <!-- end fast command definitions -->
